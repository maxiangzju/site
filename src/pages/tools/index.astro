---
import BaseLayout from '../../components/layout/BaseLayout.astro';

const tools = [
  {
    name: 'JSON Formatter',
    description: 'Format, validate, and minify JSON data',
    href: '/tools/json-formatter',
    icon: '{ }',
  },
  {
    name: 'Base64 Encoder/Decoder',
    description: 'Encode and decode Base64 strings',
    href: '/tools/base64',
    icon: 'â‡„',
  },
  {
    name: 'URL Encoder/Decoder',
    description: 'Encode and decode URL strings',
    href: '/tools/url-encoder',
    icon: 'ðŸ”—',
  },
  {
    name: 'UUID Generator',
    description: 'Generate random UUIDs (v4)',
    href: '/tools/uuid',
    icon: 'ðŸŽ²',
  },
  {
    name: 'Hash Generator',
    description: 'Generate MD5, SHA1, and SHA256 hashes',
    href: '/tools/hash',
    icon: '#',
  },
];
---

<BaseLayout title="Tools | My Site">
  <div class="max-w-4xl mx-auto px-4 py-16">
    <h1 class="text-3xl font-bold mb-4">Online Tools</h1>
    <p class="text-[var(--color-text-muted)] mb-8">
      A collection of useful developer utilities.
    </p>

    <div class="grid md:grid-cols-2 gap-6">
      {tools.map(tool => (
        <a
          href={tool.href}
          class="group block border border-[var(--color-border)] rounded-lg p-6 hover:border-[var(--color-primary)] transition-all hover:bg-[var(--color-bg-secondary)]"
        >
          <div class="flex items-start gap-3">
            <span class="text-2xl">{tool.icon}</span>
            <div>
              <h2 class="text-xl font-semibold mb-2 group-hover:text-[var(--color-primary)]">{tool.name}</h2>
              <p class="text-[var(--color-text-muted)]">{tool.description}</p>
            </div>
          </div>
        </a>
      ))}
    </div>

    <section class="mt-12 border-t border-[var(--color-border)] pt-8">
      <h2 class="text-xl font-semibold mb-4">Want to Suggest a Tool?</h2>
      <p class="text-[var(--color-text-muted)]">
        Have an idea for a useful tool? Let me know and I might build it!
      </p>
    </section>
  </div>
</BaseLayout>
