---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../components/layout/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={`${post.data.title} | Blog`} description={post.data.description}>
  <article class="max-w-3xl mx-auto px-4 py-16">
    <header class="mb-8">
      <a href="/blog" class="text-[var(--color-primary)] hover:underline mb-4 inline-block">
        &larr; Back to Blog
      </a>
      <h1 class="text-4xl font-bold mb-4">{post.data.title}</h1>
      <div class="flex items-center gap-4 text-[var(--color-text-muted)]">
        <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        {post.data.tags.length > 0 && (
          <div class="flex gap-2">
            {post.data.tags.map(tag => (
              <span class="bg-[var(--color-bg-secondary)] px-2 py-1 rounded text-sm">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </header>

    <div class="prose">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .prose :global(h1) {
    font-size: 1.875rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .prose :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  .prose :global(h3) {
    font-size: 1.25rem;
    font-weight: 500;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }
  .prose :global(p) {
    margin-bottom: 1rem;
    line-height: 1.75;
  }
  .prose :global(ul) {
    list-style-type: disc;
    list-style-position: inside;
    margin-bottom: 1rem;
  }
  .prose :global(ol) {
    list-style-type: decimal;
    list-style-position: inside;
    margin-bottom: 1rem;
  }
  .prose :global(li) {
    margin-bottom: 0.25rem;
  }
  .prose :global(pre) {
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1rem;
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
  }
  .prose :global(code) {
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    background-color: var(--color-bg-secondary);
    color: var(--color-primary);
  }
  .prose :global(pre code) {
    padding: 0;
    background-color: transparent;
  }
  .prose :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
  }
  .prose :global(a:hover) {
    text-decoration: none;
  }
  .prose :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: 1rem;
    font-style: italic;
    margin: 1rem 0;
  }
  .prose :global(strong) {
    font-weight: 600;
  }
</style>
